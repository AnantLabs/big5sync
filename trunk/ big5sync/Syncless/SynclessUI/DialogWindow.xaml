<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Name="Window" x:Class="SynclessUI.DialogWindow"
    Title="Dialog Window" WindowStyle="None" AllowsTransparency="True" Icon="Icons/logo.ico" Background="{x:Null}"  WindowStartupLocation="CenterScreen" Opacity="0.95" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="400" MinHeight="140" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
	<Window.Triggers>
		<EventTrigger RoutedEvent="FrameworkElement.Loaded">
			<BeginStoryboard x:Name="WindowOnLoaded_BeginStoryboard" Storyboard="{StaticResource WindowOnLoaded}"/>
		</EventTrigger>
	</Window.Triggers>
	<Grid x:Name="LayoutRoot">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="20"/>
			<ColumnDefinition Width="50"/>
			<ColumnDefinition/>
			<ColumnDefinition Width="20"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="20"/>
			<RowDefinition Height="30"/>
			<RowDefinition/>
			<RowDefinition Height="40"/>
			<RowDefinition Height="20"/>
		</Grid.RowDefinitions>
		<Rectangle Grid.Row="0" x:Name="Canvas" RadiusX="10" RadiusY="10" Margin="0,1,0,0" Stroke="Black" Grid.ColumnSpan="4" Grid.RowSpan="5">
			<Rectangle.Fill>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FF707271" Offset="0"/>
					<GradientStop Color="#FF111113" Offset="1"/>
					<GradientStop Color="#FF111113" Offset="0.06"/>
				</LinearGradientBrush>
			</Rectangle.Fill>
		</Rectangle>
		<TextBlock Grid.Row="0" Margin="0" Padding="5" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" x:Name="TitleBar" VerticalAlignment="Top" Cursor="Hand" Grid.ColumnSpan="3"/>
		<Label x:Name="LblCaption" Content="Caption" Foreground="#FFEEEEEE" FontFamily="Fonts/#BankGothic Md BT" FontSize="21.333" FontWeight="Bold" VerticalAlignment="Center" Height="30" Grid.ColumnSpan="2" Grid.Row="1" Grid.Column="1"/>
		<TextBlock TextWrapping="Wrap" x:Name="TxtBlkMessageBoxText" FontFamily="Century Gothic" FontSize="13.333" Foreground="White" Margin="0,10,0,0" Grid.Column="2" Grid.Row="2" Background="{x:Null}" VerticalAlignment="Top"/>
		<Image x:Name="ImgIcon" HorizontalAlignment="Left" Margin="10,0,0,0" Width="32" Grid.Column="1" Grid.Row="2" Height="32"/>
		<StackPanel x:Name="OkCommandPanel" Margin="0,10,0,0" Grid.Column="2" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="30" Visibility="Hidden">
			<Button x:Name="BtnOkCP1" Margin="0" Height="28" IsDefault="True" Click="BtnOkCP1_Click" IsCancel="True">
				<Label x:Name="LblOk1" FontFamily="Century Gothic" FontSize="9.333" Content="Ok"/>
			</Button>
		</StackPanel>
		<StackPanel x:Name="OkCancelCommandPanel" Grid.Column="2" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="30" Visibility="Hidden">
			<Button x:Name="BtnOkCP2" Margin="0,0,5,0" Height="28" IsDefault="True" Click="BtnOkCP2_Click">
				<Label x:Name="LblOk2" FontFamily="Century Gothic" FontSize="9.333" Content="Ok"/>
			</Button>
			<Button x:Name="BtnCancelCP2" Margin="0,1" Height="28" IsCancel="True" Click="BtnCancelCP2_Click">
				<Label x:Name="LblCancel2" FontFamily="Century Gothic" FontSize="9.333" Content="Cancel"/>
			</Button>
		</StackPanel>
	</Grid>
</Window>