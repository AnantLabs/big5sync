<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="SynclessUI.ProgressBarSyncControl"
	x:Name="UserControl"
	d:DesignWidth="397.4" d:DesignHeight="53">

	<Grid x:Name="LayoutRoot">
		<ProgressBar x:Name="ProgressBarSync" Margin="0,3,0,0" VerticalAlignment="Top" Height="20" Foreground="#FF00D300" />
		<Label x:Name="LblProgress" Content="{Binding Value, ElementName=ProgressBarSync, Mode=Default}" ContentStringFormat=" {0:0.##} %" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" FontFamily="Century Gothic" FontWeight="Bold" VerticalAlignment="Bottom" Width="33.754" Height="24.713" d:LayoutOverrides="GridBox"/>
	</Grid>
</UserControl>